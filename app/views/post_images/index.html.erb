<p id="notice"><%= notice %></p>
<h1 class="h1 text-center mb-5 mt-5">Post Images</h1>
<%= link_to 'New Post Image', new_post_image_path %>
<% @post_images.each do |post_image| %>
  <div class="card container mb-5 p-5">
   <p>
          <%=image_tag(post_image.user.image, height: '100', width: '100')%>
        </p>

        <p>
          <%= post_image.user.email %>
        </p> 
    <% if post_image.image.attached? %>
      <%= image_tag post_image.image, :class => "card-img-top" %>
    <% end %>
    <div class="row">
      <div class="card-body col-6">
        <h5 class="card-title"><%= post_image.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= post_image.created_at.strftime("%A %d %B %Y, %I:%M%p").freeze %></h6>
        <p class="card-text"><%= post_image.content %></p>
        <%= link_to 'Show', post_image, :class => "card-link" %>
        <%= link_to 'Edit', edit_post_image_path(post_image), :class => "card-link" %>
        <%= link_to 'Destroy', post_image, method: :delete, data: { confirm: 'Are you sure?' }, :class => "card-link" %>
        <% if post_image.comments %>
          <p>
            <%= post_image.comments.count %>
          </p>
        <% end %>
      </div>
      <div class="card-body col-6">
        <div id="like-section">
          <% pre_like = post_image.likes.find { |like| like.user_id == Current.user.id} %>
          <% if pre_like %>
            <%= button_to 'Unlike', post_image_like_path(post_image, pre_like), method: :delete %>
          <% else %>
            <%= button_to 'Like', post_image_likes_path(post_image), method: :post_image %>
          <% end %>
          <p id="like-count"><%= post_image.likes.count%><%= (post_image.likes.count) == 1 ? 'Like' : 'Likes' %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
