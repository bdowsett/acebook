<p id="notice"><%= notice %></p>

<div class='container-fluid'>
<div class='row'>
<div class='col-3'>
<p>Hello, <%= Current.user.email%><p>

<%= render 'form', room: Room.new %>
<hr>
<% @rooms.each do |room| %>
<%= link_to room do %>
<div class='card mb-2'>
<div class='card-body'>
<%= link_to room.name %>
</div>
</div>
<% end %>
<% end %>
</div>
<div class= 'col-9'>
<% if @room.present? %>
<div class='chat-room'>
<p><%= @room.name %></p>
<% @room.messages.each do |message| %>
<div class='message mb-3 <%= 'me' if message.user == Current.user %>'>
<div class='content-container'>
<div class='content'>
<%= message.content %>
</div>
<div class='author'>
<%= message.user.email %>
</div>
</div>
</div>
<% end %>
<div class='chat-box'>
<%= render 'messages/form', message: Message.new, room: @room %>
</div>
</div>
<% end %>
</div>
</div>
</div>